<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id></id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>

	<fileSets>
		<!-- standalone Backend Binaries -->
		<fileSet>
			<directory>${project.basedir}/../webapp/target</directory>
			<includes>
				<include>*.war</include>
			</includes>
			<outputDirectory>yourapplication-frontend/binaries</outputDirectory>
		</fileSet>
		<!-- standalone Backend Configuration -->
		<fileSet>
			<directory>${project.basedir}/../webapp/src/main/resources</directory>
			<includes>
				<include>application.properties</include>
				<include>logback.xml</include>
				<include>saml/**</include>
			</includes>
			<outputDirectory>yourapplication-frontend/configuration</outputDirectory>
		</fileSet>
	</fileSets>
</assembly>
